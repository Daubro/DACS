@model IEnumerable<CourseModel>
<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>
<style>
    .course-image-wrapper {
        height: 450px;
    }
</style>
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <h2 class="title text-center">Khóa học nổi bật</h2>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <a>
                    <div class="single-products">
                        <div class="productinfo text-center">
                                <img src="~/images/@item.ImageUrl" alt="@item.Name" style="width: 100%; height: 200px; object-fit: cover;" />
                                <h2>$@item.Price.ToString("#,##0,VNĐ")</h2>
                            <p>@item.Name</p>
                            <p>Danh mục : @item.Category.Name</p>
                            <p>Tên giảng viên : @item.Instructor.Name</p>
                                <a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i> Đăng ký ngay </a>
                            </div>
                    </div>
                    </a>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-heart"></i> Yêu thích</a></li>
                            <li><a href="#"><i class="fa fa-exchange"></i> Thêm vào giỏ hàng</a></li>
                        </ul>
                    </div>
                </div>
            </div>}
            </div>
            </div>
        