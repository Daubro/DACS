@model IEnumerable<Webbankhoahoconline.Models.InstructorModel>

@{
    ViewData["Title"] = "List Instructors";
}

<h3>List Instructors</h3>
<a asp-action="Create" asp-controller="Instructor">Add Instructor</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên giảng viên</th>
            <th scope="col">Email</th>
            <th scope="col">Ảnh đại diện</th>
            <th scope="col">Slug</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Ngày tham gia</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <img src="@item.AvatarUrl" width="100" height="100" style="object-fit: cover; border-radius: 50%;" alt="Avatar" />
                </td>
                <td>@item.Slug</td>
                <td>@item.Bio</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <div style="display: flex; gap: 5px;">
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Instructor" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Instructor" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
