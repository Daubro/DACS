@model List<Webbankhoahoconline.Models.VideoModel>

<h2>Danh sách video theo khóa học</h2>

@if (Model == null || !Model.Any())
{
    <div>Chưa có video nào.</div>
}
else
{
    @foreach (var group in Model.GroupBy(v => v.Course))
    {
        <h3>@group.Key.Name</h3> <!-- Tên khóa học -->

        <div class="row">
            @foreach (var video in group)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-header">@video.FileName</div>
                        <div class="card-body">
                            <video controls width="100%" height="200">
                                <source src="@video.Url" type="video/mp4" />
                                Trình duyệt không hỗ trợ video.
                            </video>
                            <p><small>Ngày tải: @video.UploadDate.ToString("dd/MM/yyyy HH:mm")</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
